{% extends 'base.html.twig' %}

{% block body %}

    <div class="fond-inscription">
        <div class="placement_nav">
            {% include 'common/_nav.html.twig' %}
        </div>
        <div class="inscription">
            <h3>Inscription</h3>

            {{ form_start(registrationForm) }}

            <div class="cote_a_cote">
                {{ form_row(registrationForm.firstname, {'label': 'Prénom', 'attr' : {'placeholder' : 'Votre prénom'}}) }}
                {{ form_row(registrationForm.username, {'label': 'Nom', 'attr': {'placeholder': 'Votre nom'}}) }}
            </div>

            {{ form_row(registrationForm.adresse, {'label': 'Adresse de votre lieu de travail', 'attr': {'placeholder': 'Adresse pour la livraison'}}) }}

            <div class="cote_a_cote">
                {{ form_row(registrationForm.email, {'label': 'Votre Email', 'attr' : {'placeholder': 'Votre adresse mail'}}) }}
                {{ form_row(registrationForm.phone, {'label': 'Numéro de téléphone', 'attr': {'placeholder': 'Votre numéro de téléphone'}}) }}
            </div>

            {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'placeholder': 'Veuillez créer votre mot de passe'}}) }}
            {#{{ form_row(registrationForm.confirm_password, {'label': 'Confirmer le mot de passe', 'attr': {'placeholder': 'Confirmation du mot de passe'}}) }}#}

            <button type="submit">Inscription</button>

            {{ form_end(registrationForm) }}
        </div>

        <div class="placement_footer">
            {% include 'common/_footer.html.twig' %}
        </div>

    </div>

{% endblock %}

